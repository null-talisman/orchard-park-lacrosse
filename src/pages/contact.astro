---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us" description="Get in touch with Orchard Park Lacrosse">
  <!-- Hero -->
  <section class="gradient-hero py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display text-5xl md:text-6xl text-white text-shadow mb-4">
        Contact Us
      </h1>
      <p class="text-white/80 text-lg max-w-2xl mx-auto">
        Have questions? We'd love to hear from you.
      </p>
    </div>
  </section>

  <section class="py-16 bg-quaker-cream">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-xl shadow-lg p-8">
          <h2 class="font-display text-2xl text-quaker-dark mb-6">Send Us a Message</h2>
          <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-6">
            <div class="grid sm:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-quaker-dark mb-2">Name</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-quaker-green focus:border-transparent transition-colors"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-quaker-dark mb-2">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-quaker-green focus:border-transparent transition-colors"
                  placeholder="your@email.com"
                />
              </div>
            </div>
            <div>
              <label for="subject" class="block text-sm font-medium text-quaker-dark mb-2">Subject</label>
              <select 
                id="subject" 
                name="subject"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-quaker-green focus:border-transparent transition-colors"
              >
                <option value="general">General Inquiry</option>
                <option value="registration">Registration Question</option>
                <option value="coaching">Coaching Opportunity</option>
                <option value="sponsorship">Sponsorship</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-quaker-dark mb-2">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-quaker-green focus:border-transparent transition-colors resize-none"
                placeholder="How can we help you?"
              ></textarea>
            </div>
            <button 
              type="submit"
              class="w-full px-6 py-4 bg-quaker-green text-white font-display tracking-wider rounded-lg hover:bg-quaker-dark transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <!-- Info Cards -->
          <div class="bg-white rounded-xl shadow-lg p-8">
            <h2 class="font-display text-2xl text-quaker-dark mb-6">Get In Touch</h2>
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-quaker-green/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-quaker-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-display text-lg text-quaker-dark">Email</h3>
                  <a href="mailto:info@oplax.org" class="text-quaker-green hover:text-quaker-dark transition-colors">info@oplax.org</a>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-quaker-green/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-quaker-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-display text-lg text-quaker-dark">Location</h3>
                  <p class="text-quaker-dark/70">Orchard Park High School</p>
                  <p class="text-quaker-dark/70">4040 Baker Rd</p>
                  <p class="text-quaker-dark/70">Orchard Park, NY 14127</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="bg-white rounded-xl shadow-lg p-8">
            <h2 class="font-display text-2xl text-quaker-dark mb-6">Quick Links</h2>
            <div class="space-y-4">
              <a href="/programs" class="flex items-center justify-between p-4 bg-quaker-cream rounded-lg hover:bg-quaker-green/10 transition-colors group">
                <span class="text-quaker-dark font-medium">View Programs</span>
                <svg class="w-5 h-5 text-quaker-green group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
              <a href="/register" class="flex items-center justify-between p-4 bg-quaker-cream rounded-lg hover:bg-quaker-green/10 transition-colors group">
                <span class="text-quaker-dark font-medium">Register Now</span>
                <svg class="w-5 h-5 text-quaker-green group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
              <a href="/schedule" class="flex items-center justify-between p-4 bg-quaker-cream rounded-lg hover:bg-quaker-green/10 transition-colors group">
                <span class="text-quaker-dark font-medium">View Schedule</span>
                <svg class="w-5 h-5 text-quaker-green group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Social -->
          <div class="bg-quaker-green rounded-xl shadow-lg p-8 text-center">
            <h2 class="font-display text-2xl text-white mb-4">Follow Us</h2>
            <p class="text-white/80 mb-6">Stay connected on social media</p>
            <div class="flex justify-center gap-4">
              <a href="#" class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center hover:bg-white hover:text-quaker-green text-white transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/></svg>
              </a>
              <a href="#" class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center hover:bg-white hover:text-quaker-green text-white transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12,2.16c3.2,0,3.58,0,4.85.07,3.25.15,4.77,1.69,4.92,4.92.06,1.27.07,1.65.07,4.85s0,3.58-.07,4.85c-.15,3.23-1.66,4.77-4.92,4.92-1.27.06-1.65.07-4.85.07s-3.58,0-4.85-.07c-3.26-.15-4.77-1.7-4.92-4.92-.06-1.27-.07-1.65-.07-4.85s0-3.58.07-4.85C2.38,3.92,3.9,2.38,7.15,2.23,8.42,2.18,8.8,2.16,12,2.16ZM12,0C8.74,0,8.33,0,7.05.07c-4.35.2-6.78,2.62-7,7C0,8.33,0,8.74,0,12s0,3.67.07,4.95c.2,4.36,2.62,6.78,7,7C8.33,24,8.74,24,12,24s3.67,0,4.95-.07c4.35-.2,6.78-2.62,7-7C24,15.67,24,15.26,24,12s0-3.67-.07-4.95c-.2-4.35-2.62-6.78-7-7C15.67,0,15.26,0,12,0Zm0,5.84A6.16,6.16,0,1,0,18.16,12,6.16,6.16,0,0,0,12,5.84ZM12,16a4,4,0,1,1,4-4A4,4,0,0,1,12,16ZM18.41,4.15a1.44,1.44,0,1,0,1.44,1.44A1.44,1.44,0,0,0,18.41,4.15Z"/></svg>
              </a>
              <a href="#" class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center hover:bg-white hover:text-quaker-green text-white transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
