---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/programs", label: "Programs" },
  { href: "/schedule", label: "Schedule" },
  { href: "/announcements", label: "News" },
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact" },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-quaker-green sticky top-0 z-50 shadow-lg">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 group">
        <div class="w-10 h-10 md:w-12 md:h-12 bg-white rounded-full flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300">
          <span class="text-quaker-green font-display font-bold text-lg md:text-xl">OP</span>
        </div>
        <div class="hidden sm:block">
          <span class="text-white font-display text-lg md:text-xl tracking-wide">Orchard Park</span>
          <span class="text-white/70 font-display text-lg md:text-xl tracking-wide ml-1">Lacrosse</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class={`px-4 py-2 font-display text-sm tracking-wider transition-all duration-300 rounded-md ${
              currentPath === link.href 
                ? 'bg-white text-quaker-green' 
                : 'text-white hover:bg-white/10'
            }`}
          >
            {link.label}
          </a>
        ))}
        <a 
          href="/register" 
          class="ml-4 px-6 py-2 bg-white text-quaker-green font-display font-semibold text-sm tracking-wider rounded-md hover:bg-quaker-dark hover:text-white hover:scale-105 transition-all duration-300"
        >
          Register Now
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden text-white p-2 hover:bg-white/10 rounded-md transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-2">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class={`px-4 py-3 font-display text-sm tracking-wider rounded-md ${
              currentPath === link.href 
                ? 'bg-white text-quaker-green' 
                : 'text-white hover:bg-white/10'
            }`}
          >
            {link.label}
          </a>
        ))}
        <a 
          href="/register" 
          class="px-4 py-3 bg-white text-quaker-green font-display font-semibold text-sm tracking-wider rounded-md text-center mt-2"
        >
          Register Now
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
