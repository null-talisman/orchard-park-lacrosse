---
interface Props {
  title: string;
  date: string;
  time: string;
  location: string;
  type: 'game' | 'practice' | 'tournament' | 'meeting' | 'camp';
}

const { title, date, time, location, type } = Astro.props;

const dateObj = new Date(date);
const month = dateObj.toLocaleDateString('en-US', { month: 'short' });
const day = dateObj.getDate();

const typeColors = {
  game: 'bg-red-500',
  practice: 'bg-blue-500',
  tournament: 'bg-purple-500',
  meeting: 'bg-orange-500',
  camp: 'bg-green-500',
};

const typeLabels = {
  game: 'ğŸ† Game',
  practice: 'ğŸ¥ Practice',
  tournament: 'ğŸ¯ Tournament',
  meeting: 'ğŸ“‹ Meeting',
  camp: 'â›º Camp',
};
---

<div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden flex">
  <!-- Date Block -->
  <div class="bg-quaker-green text-white p-4 flex flex-col items-center justify-center min-w-[80px]">
    <span class="text-xs font-display uppercase tracking-wider">{month}</span>
    <span class="text-3xl font-bold">{day}</span>
  </div>
  
  <!-- Content -->
  <div class="p-4 flex-grow">
    <div class="flex items-center gap-2 mb-2">
      <span class={`${typeColors[type]} text-white text-xs px-2 py-0.5 rounded-full font-medium`}>
        {typeLabels[type]}
      </span>
    </div>
    <h3 class="font-display text-lg text-quaker-dark">{title}</h3>
    <div class="flex items-center gap-4 mt-2 text-sm text-quaker-dark/60">
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        {time}
      </span>
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        {location}
      </span>
    </div>
  </div>
</div>
